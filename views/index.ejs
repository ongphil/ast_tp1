<!DOCTYPE html>
<html lang="en">

<head>
  <% include partials/head %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
</head>

<body class="container">
  <div class="row">
    <div class="col">
        <h1>Hello
            <%= name %>
            <button class="btn btn-danger ml-3" href="/logout" onClick='document.location.href="/logout"'>
              Logout
            </button>
          </h1>
    </div>
    
  </div>
  <div class="row mt-4">
      <div class="col">
        <div class="row justify-content-end">
          <div class="col-auto">
              <button class="btn btn-primary" id="show-metrics">
                Show metrics
              </button>
              <button class="btn btn-success" id="add-metrics" data-toggle="modal" data-target="#addMetricsModal">
                Add a metric
              </button>
          </div>
        </div>
        <hr/>
        <div class="row">
          <div class="col">
              <div class="mt-3" id="metrics"></div>
              <!-- Modal -->
              <div class="modal fade" id="addMetricsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add metrics</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        <form action=<%- `/metrics/${name}` %> method="post">
                          <div class="form-group">
                            <label for="form_key">Key : </label>
                            <input id="form_key" type="number" name="key" value="0"/>
                          </div>
                          <div class="form-group">
                            <label for="form_value">Value : </label>
                            <input id="form_value" type="number" name="value" value="0"/>
                          </div>
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                          <button class="btn btn-primary" type="submit" value="Submit" id="btnSubmit">Confirm</button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>
          </div>
          
        </div>
          
      </div>
  </div>
  
</body>

<script>
  $('#btnSubmit').click(function() {
    $('#addMetricsModal').modal('hide');
  });

  $('#show-metrics').click((e) => {
    e.preventDefault()
    const current_user = "<%- name %>"
    $.getJSON(`metrics/${current_user}`, {}, (data) => {
      let final_content = [];
      for(const key in data[0]) {
        final_content.push(
          `     <div class="row justify-content-start my-3">
                  <div class="col-12">
                    <div class="card">
                      <div class="card-header">
                        <div class="row justify-content-between">
                          <div class="col-auto">
                            <span class="h5">${key} - Metrics</span>
                          </div>
                          <div class="col-auto">
                            <button type="button" class="btn btn-danger" value="${key}" onclick="deleteMetrics(this.value)">Delete group</button>
                          </div>
                        </div>
                      </div>
                      <div class="card-body">
                        <div class="row">
                          <div class="col-6">
                          <table class="table table-sm">
                            <thead class="thead-light">
                              <tr>
                                <th scope="col" class="text-center">Timestamp</th>
                                <th scope="col">Value</th>
                              </tr>
                            </thead>
                            <tbody>
            `
            );
        data[0][key].map(d => {
          final_content.push(`<tr><td class="text-center">${d.timestamp}</td><td>${d.value}</td></tr>`);
        })
        final_content.push(`</tbody></table></div><div class="col-6"><canvas id="${key}" width="400" height="300"></canvas></div></div></div></div></div></div>`);
      }
      $("#metrics").empty()
      $("#metrics").append(final_content.join("\n"))

      for(const key in data[0]) {
        let labelsArray = [];
        let dataArray = [];
        for(const metricKey in data[0][key]) {
          labelsArray.push(data[0][key][metricKey].timestamp);
          dataArray.push(data[0][key][metricKey].value);
        }
        var ctx = document.getElementById(`${key}`).getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labelsArray,
                datasets: [{
                    label: 'metrics',
                    data: dataArray,
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero:true
                        }
                    }]
                }
            }
        });
      }
    })
  })

  function deleteMetrics(metricKey) {
    const r = confirm("Are you sure ?");
    if(r == true) {
      const current_user = "<%- name %>"
      $.ajax({
        url: `/metrics/${current_user}/${metricKey}`,
        type: 'DELETE',
        success: function(result) {
          $("#metrics").empty()
          $("#metrics").append(final_content.join("\n"))
        }
      });
    }
    
  }
</script>

