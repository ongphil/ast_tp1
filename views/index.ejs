<!DOCTYPE html>
<html lang="en">

<head>
  <% include partials/head %>
</head>

<body class="container">
  <div class="col-md-6.col-md-offset-3">
    <h1>Hello
      <%= name %>
    </h1>
    <button class="btn btn-success" id="show-metrics">
      Bring the metrics
    </button>
    <button class="btn btn-primary" id="add-metrics" data-toggle="modal" data-target="#addMetricsModal">
      Add metrics
    </button>
    <button class="btn btn-danger" href="/logout" onClick='document.location.href="/logout"'>
      Logout
    </button>
    <div class="mt-3 row justify-content-start" id="metrics"></div>
    <!-- Modal -->
    <div class="modal fade" id="addMetricsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add metrics</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            ...
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary">Confirm</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

<script>
  $('#show-metrics').click((e) => {
    e.preventDefault()
    const current_user = "<%- name %>"
    $.getJSON(`metrics/${current_user}`, {}, (data) => {
      let final_content = [];
      for(const key in data[0]) {
        final_content.push(
          `     <div class="col-6">
                  <div class="card my-3">
                    <div class="card-header">
                      <span class="h5">${key} - Metrics</span>
                    </div>
                    <div class="card-body">
                      <table class="table table-sm">
                        <thead class="thead-light">
                          <tr>
                            <th scope="col" class="text-center">Timestamp</th>
                            <th scope="col">Value</th>
                          </tr>
                        </thead>
                        <tbody>
            `
            );
        data[0][key].map(d => {
          final_content.push(`<tr><td class="text-center">${d.timestamp}</td><td>${d.value}</td></tr>`);
        })
        final_content.push('</tbody></table></div></div></div>');
      }
      $("#metrics").append(final_content.join("\n"))
    })
  })
</script>

</html>